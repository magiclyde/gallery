<div class="container">
    {% if app.user %}
        <div class="clearfix text-small text-right text-muted mb-2">
            {{ app.user.email }}
        </div>
    {% endif %}

    <div class="header clearfix">
        <nav>
            <ul class="nav nav-pills float-right">
                <li class="nav-item">
                    <a class="nav-link" href="{{ url('home') }}" data-path="{{ path('home') }}">Home</a>
                </li>

                {% if app.user %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ url('upload') }}" data-path="{{ path('upload') }}">Upload</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="{{ url('app_logout') }}" data-path="{{ path('app_logout') }}">Log out</a>
                    </li>
                {% else %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ url('app_login') }}" data-path="{{ path('app_login') }}">Login</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ url('app_register') }}" data-path="{{ path('app_register') }}">Register</a>
                    </li>
                {% endif %}
            </ul>
        </nav>
        <h3 class="text-muted">
            <a href="{{ url('home') }}">
                Clyde's Image Gallery
            </a>
        </h3>
    </div>
</div>